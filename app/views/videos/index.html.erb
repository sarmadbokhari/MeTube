<h2>All Videos:</h2>
<ul>
<% @videos.each do |video| %>
<li><%= link_to video.title, "/videos/#{video.id}" %></li>
<% end %>
</ul>

<h2>Add new video</h2>
<div class="form_area">
  <div class="add_video_form">
    <form action="/videos" method="post">
      <label for="title">Title:</label>
      <input type="text" id="title" name="video[title]">

      <label for="description">Description:</label>
      <input type="text" id="description" name="video[description]">

      <label for="youtube_id">Youtube ID:</label>
      <input type="text" id="youtube_id" name="video[youtube_id]">

      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    </form>
  </div>
</div>

<input type="submit" value="Add more videos" class="add_videos_btn">
<input type="submit" value="submit">

<br><br>
<button><a href="/sounds">Go to Sounds</a></button>

<script type="javascript">
  var video_form = $(".add_video_form").val();

  $(document).ready(function(){
    $(".add_videos_btn").on('click', function(e){
      e.preventDefault();
      $(".form_area").append(video_form);
    })
  })
</script>
