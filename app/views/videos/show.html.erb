<a href="/"><input type="submit" value="Home"></a>
<h1><%= @video.title %></h1>
<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<br>

<a href="/videos/<%= @video.id %>/edit"><input type="submit" value="edit"></a>

<h2>Comment on this video</h2>
<form action="/videos/<%= @video.id %>/comments" method="post">
  <label for="title">Comment:</label>
  <input type="textarea" id="comment" name="video[comment]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
</form>

<ul>
  <% @video.comments.each do |comment| %>
  <li><%= comment.content %></li>
  <% end %>
</ul>
